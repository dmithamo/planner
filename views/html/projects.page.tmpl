{{template "base" .}}
{{define "title"}}projects{{end}}
{{define "body"}}
<div class="container">
  <div class="container-nav">
    <a class="create-new" href="/projects/create">New &rarr;</a>
  </div>
  <div class="container-main">
    {{with .}}
      <ul class="nav-list">
        {{range .}}
        <li class="project-card"><a href="/projects/{{.ProjectSlug}}">{{.Title}}</a></li>
        {{end}}
      </ul>
    {{else}}
    <p>0 Projects</p>
    {{end}}
  </div>
</div>
{{end}}
